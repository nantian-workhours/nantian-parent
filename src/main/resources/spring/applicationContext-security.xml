<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd">

	<!-- 匿名访问 -->
	<http pattern="/css/**" security="none"></http>
	<http pattern="/img/**" security="none"></http>
	<http pattern="/js/**" security="none"></http>
	<http pattern="/plugins/**" security="none"></http>
	<http pattern="/fonts/**" security="none"></http>
	<http pattern="/*.html" security="none"></http>
	<!--登录使用的.do文件-->


	<!-- 设置权限拦截规则  -->
	<http use-expressions="false">
		<!--pattern 是拦截的路径  access  是拦截的方法-->
		<intercept-url pattern="/**"  access="ROLE_SUPERADMIN"/>
		<intercept-url pattern="/department/**"  access="ROLE_ADMIN"/>
		<intercept-url pattern="/content/**"  access="ROLE_ADMIN"/>


		<!--<intercept-url pattern="/**"  access="ROLE_USER"/>-->
		<!--<intercept-url pattern="/**"  access="ROLE_FORBIDDEN"/>-->

		<!-- 没有权限跳转页面-->
		<access-denied-handler error-page="/WEB-INF/404.jsp" />


		<!-- login-page设置登录拦截页面       default-target-url:登录成功后设置的跳转页面   始终跳转这个页面   -->
		<!--<form-login  login-page="https://floatspace.github.io/#/login" default-target-url="https://floatspace.github.io/#/dashboard" always-use-default-target="true"/>-->
		<form-login  login-page="/index/index.html/#/login" default-target-url="/index/index.html" always-use-default-target="true"/>
		<!-- 放过csrf -->
		<csrf disabled="true"/>
		<!-- 放开iframe -->
		<headers>
			<!--DENY:拒绝的  -ALLOW_from:允许的 SAMEORIGIN:同源指自己本工程  -->
			<frame-options policy="SAMEORIGIN"/>
		</headers>
		<!-- 登出/注销操作配置    配置登出成功的路径-->
		<logout logout-success-url="/#/login"/>
	</http>


	<!-- 设置认证管理 -->
	<authentication-manager>
		<authentication-provider user-service-ref="UserDetailsService">
			<password-encoder ref="bcryptEncoder" ></password-encoder>
		</authentication-provider>
	</authentication-manager>

	<!-- 注入Cbrypt加密方法 -->
	<beans:bean id="bcryptEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></beans:bean>

	<!-- 注入认证方法类 -->
	<beans:bean id="UserDetailsService" class="cn.com.nantian.common.UserDetailsServiceImpl">
		<beans:property name="userService" ref="userService"></beans:property>
	</beans:bean>
	<beans:bean id="userService" class="cn.com.nantian.service.impl.UserServiceImpl"></beans:bean>

</beans:beans>